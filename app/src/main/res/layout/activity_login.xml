<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Login progress -->
   <TextView
       android:id="@+id/logo"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="小热点餐厅端"
       android:layout_centerHorizontal="true"
       android:layout_alignParentTop="true"
       android:drawableTop="@drawable/ic_launcher"
       android:textSize="15sp"
       android:textColor="@color/title_text_color"
       android:drawablePadding="5dp"
       android:layout_marginTop="40dp"/>

    <RelativeLayout
        android:id="@+id/num_la"
        android:layout_below="@id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="1dp">
        <EditText
            android:paddingLeft="5dp"
            android:layout_centerInParent="true"
            android:id="@+id/ev_num"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/sj"
            android:hint="请输入手机号"
            android:layout_width="350dp"
            android:layout_height="42dp"
            android:textSize="15sp"
            android:background="@drawable/bg_exit"
           />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/code_la"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/num_la"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <EditText
            android:paddingLeft="5dp"
            android:id="@+id/ev_code"
            android:layout_width="200dp"
            android:hint="请输入验证码"
            android:textSize="15sp"
            android:layout_height="42dp"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/yzm"
            android:background="@drawable/bg_exit"
            />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_code"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:textSize="13sp"
        android:text="获取验证码"
        android:textColor="@color/color_fd7a40"
        android:gravity="center"
        android:padding="3dp"
        android:layout_marginTop="17dp"
        android:layout_below="@id/num_la"
        android:layout_toRightOf="@id/code_la"
        />


    <RelativeLayout
        android:id="@+id/invitation_la"
        android:layout_below="@id/code_la"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="1dp">
        <EditText
            android:paddingLeft="5dp"
            android:layout_centerInParent="true"
            android:id="@+id/invitation_num"
            android:hint="请输入邀请码"
            android:drawableLeft="@drawable/yqm"
            android:layout_width="350dp"
            android:layout_height="42dp"
            android:drawablePadding="4dp"
            android:textSize="15sp"
            android:background="@drawable/bg_exit"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="17sp"
        android:gravity="center"
        android:padding="5dp"
        android:text="登录"
        android:textColor="@color/white"
        android:layout_marginTop="55dp"
        android:layout_below="@id/invitation_la"
        android:background="@drawable/corner_remote_view_btn"
        />

</RelativeLayout>
