<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.savor.resturant.fragment.CustomerFragment">
    <include
        layout="@layout/layout_head_title"
        />
    <LinearLayout
        android:background="#F6F3EE"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:drawablePadding="10dp"
            android:text="新增客户"
            android:drawableTop="@drawable/ico_slide_video"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/divider_list"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center"
            android:drawablePadding="10dp"
            android:text="添加消费记录"
            android:drawableTop="@drawable/ico_slide_video"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <include
        layout="@layout/include_search_border"
        />
    <LinearLayout
        android:orientation="vertical"
        android:background="#F6F3EE"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_margin="15dp"
            android:text="最近操作"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv_op_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginRight="15dp" />
    </LinearLayout>
</LinearLayout>
