<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bottom_bg"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_box_name"
        android:layout_marginLeft="15dp"
        android:text="凌波仙子"
        android:textSize="20sp"
        android:textColor="@color/color_222222"
        android:textStyle="bold"
        android:paddingTop="18sp"
        android:includeFontPadding="false"
        android:paddingBottom="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_welcome_item"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:background="@drawable/bg_room_service"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:includeFontPadding="false"
                    android:paddingRight="7dp"
                    android:textSize="16sp"
                    android:textColor="@color/color_333333"
                    android:text="欢迎词"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_wel_playing"
                    android:paddingLeft="7dp"
                    android:textSize="13sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="投屏中"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/color_888888"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:text="欢迎刘总莅临本店，祝您用餐愉快"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/color_888888"
                    android:ellipsize="end"
                    android:text="（点击编辑）"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_welcome_pro"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:padding="15dp"
            android:background="@drawable/bg_pro_exit_btn"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="投屏"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_recommend_service"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:background="@drawable/bg_room_service"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:includeFontPadding="false"
                    android:paddingRight="7dp"
                    android:textSize="16sp"
                    android:textColor="@color/color_333333"
                    android:text="推荐菜"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_recommend_playing"
                    android:paddingLeft="7dp"
                    android:textSize="13sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="投屏中"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/color_888888"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="默认播全部推荐菜"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/color_888888"
                    android:ellipsize="end"
                    android:text=" （点击可选）"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_recommend_pro"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:padding="15dp"
            android:background="@drawable/bg_pro_exit_btn"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="投屏"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>