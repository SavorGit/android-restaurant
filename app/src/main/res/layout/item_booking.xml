<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ece6de">

    <RelativeLayout
        android:id="@+id/book_layout"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/room_name"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner_remote_b3"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:text="包间名称"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/room_name"
            android:text="13:00"
            android:textColor="@color/color_text_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/custom_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/time"
            android:text="5人"
            android:textColor="@color/color_text_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/custom_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/room_name"
            android:text="王先生"
            android:textColor="@color/app_text_type"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/custom_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/custom_name"
            android:text="13811966726"
            android:textColor="@color/app_text_type"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/label1"
            android:layout_width="60dp"
            android:layout_height="38dp"
            android:layout_below="@id/custom_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/room_name">



            <ImageView
                android:id="@+id/is_hyc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/sy_hyc2"
                android:visibility="visible"

                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/label2"
            android:layout_width="60dp"
            android:layout_height="38dp"
            android:layout_below="@id/custom_name"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/label1">



            <ImageView
                android:id="@+id/is_tjc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/sy_tjc2"
                android:visibility="visible"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/label3"
            android:layout_width="75dp"
            android:layout_height="38dp"
            android:layout_below="@id/custom_name"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/label2">


            <ImageView
                android:id="@+id/is_xfjl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               android:layout_centerInParent="true"
                android:src="@drawable/sy_xfjl2"
                android:visibility="visible"
                />

        </RelativeLayout>




    </RelativeLayout>

</RelativeLayout>
