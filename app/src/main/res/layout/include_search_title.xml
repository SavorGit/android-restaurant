<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#EDE6DE"
    android:orientation="horizontal">
    <EditText
        android:layout_weight="1"
        android:id="@+id/et_search"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ico_search"
        android:textSize="14sp"
        android:textColorHint="@color/text_content_black"
        android:textColor="@color/white"
        android:background="@drawable/bg_search_text"
        android:padding="10dp"
        android:hint="输入姓名或手机号查找客户"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_cancel_btn"
        android:textColor="@color/colorPrimary"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:text="取消"
        android:layout_height="wrap_content" />
</LinearLayout>