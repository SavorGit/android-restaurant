                    android:gravity="center"
                    android:padding="2dp"
                    />

            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>
    <!--包间列表-->
    <include
        android:layout_below="@id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/include_room_list"
        android:visibility="gone" />

</RelativeLayout>
