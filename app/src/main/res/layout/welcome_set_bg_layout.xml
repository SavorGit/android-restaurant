                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:padding="2dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/bg_l4"
                android:id="@+id/bg_l5"
